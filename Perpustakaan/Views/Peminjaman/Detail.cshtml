@model Perpustakaan.Models.Peminjaman


@{
    ViewData["Title"] = "Detail";
}

<header class="page-header page-header-compact page-header-light border-bottom bg-white mb-4">
    <div class="container-xl px-4">
        <div class="page-header-content">
            <div class="row align-items-center justify-content-between pt-3">
                <div class="col-auto mb-3">
                    <h4 class="page-header-title">
                        Detail Peminjaman
                    </h4>
                </div>
            </div>
        </div>
    </div>
</header>
<div class="container-xl px-4 mt-4">
    <div class="row">

        <div class="row gx-3 mb-3">
            <div class="form-group col-md-6">
                <a asp-action="Index" class="btn btn-secondary"><i class="fa fa-table"></i> Back to List</a>
            </div>
        </div>
        <div class="col-xl-8">
            <!-- Account details card-->

            <div class="card mb-4">
                <div class="card-header">Data Details</div>
                <div class="card-body">
                    <form>
                        <!-- Form Row-->
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (first name)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="IdBuku">Id Buku</label>
                                <div class="form-control" id="IdBuku">
                                    @Html.DisplayFor(model => model.IdBuku, new { @Value = "-" })
                                </div>
                            </div>
                            <!-- Form Group (last name)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="NamaPeminjam">NamaPeminjam</label>
                                <div class="form-control" id="NamaPeminjam">
                                    @Html.DisplayFor(model => model.NamaPeminjam)
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>

        <div class="col-xl-4">
            <!-- Profile picture card-->
            <div class="card mb-4 mb-xl-0">
                <div class="card-header">Pengembalian</div>
                <div class="card-body text-center">
                    <form asp-action="Kembali">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="@Model.IdPeminjaman" />
                        <input type="hidden" asp-for="@Model.IdBuku" />
                        <input type="hidden" asp-for="@Model.NamaPeminjam" />
                        <input type="hidden" asp-for="@Model.IsPengembalian" value="1" />
                        <input type="submit" value="Melakukan Pengembalian" class="btn btn-primary" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
