@model Perpustakaan.Models.IBuku

@{
    ViewData["Title"] = "Form Data Buku";
}

<header class="page-header page-header-compact page-header-light border-bottom bg-white mb-4">
    <div class="container-xl px-4">
        <div class="page-header-content">
            <div class="row align-items-center justify-content-between pt-3">
                <div class="col-auto mb-3">
                    <h4 class="page-header-title">
                        Form Data Buku
                    </h4>
                </div>
            </div>
        </div>
    </div>
</header>
<div class="container-xl px-4 mt-4">
    <div class="row">


        <div class="col-xl-8">
            <!-- Account details card-->

            <div class="card mb-4">
                <div class="card-header">Form Tambah Data Buku</div>
                <div class="card-body">
                    <form asp-action="AddOrEdit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="@Model.Buku.IdBuku" />
                        <!-- Form Row-->
                        <div class="row gx-3 mb-3">
                            <div class="form-group col-md-6">
                                <label asp-for="@Model.Buku.Judul" class="small mb-1">Judul Buku</label>
                                <input asp-for="@Model.Buku.Judul" class="form-control" />
                                <span asp-validation-for="@Model.Buku.Judul" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="@Model.Buku.Tahun" class="small mb-1">Tahun terbit</label>
                                <input asp-for="@Model.Buku.Tahun" class="form-control" />
                                <span asp-validation-for="@Model.Buku.Tahun" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row gx-3 mb-3">
                            <div class="form-group col-md-6">
                                <label asp-for="@Model.Buku.IdPenerbit" class="small mb-1">Penerbit</label>
                                <select id="ddlPenerbit" class="form-control" asp-for="@Model.Buku.IdPenerbit" asp-items="@Model.Penerbits">
                                    <option value="">Select Penerbit</option>
                                </select>
                                <span asp-validation-for="@Model.Buku.IdPenerbit" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="@Model.Buku.IdPenulis" class="small mb-1">Penulis</label>
                                <select id="ddlPenerbit" class="form-control" asp-for="@Model.Buku.IdPenulis" asp-items="@Model.Penuliss">
                                    <option value="">Select Penulis</option>
                                </select>
                                <span asp-validation-for="@Model.Buku.IdPenulis" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row gx-3 mb-3">
                            <div class="form-group col-md-6">
                                <input type="submit" value="Submit" class="btn btn-primary col-md-12" />
                            </div>
                            <div class="form-group col-md-6">
                                <a asp-action="Index" class="btn btn-secondary col-md-12"><i class="fa fa-table"></i> Back to List</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
