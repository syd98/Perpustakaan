@model Perpustakaan.Models.User

@{
    ViewData["Title"] = "Registrasi";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5 ">
                <div class="card-header text-white bg-dark"><h3 class="text-center font-weight-light my-4 ">Registrasi</h3></div>
                <div class="card-body">
                    <form asp-action="Regis" >
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="@Model.IdUser" />
                        <div class="form-floating mb-3">
                            <input asp-for="@Model.Username" class="form-control" />
                            <label asp-for="@Model.Username">Username</label>
                            <span asp-validation-for="@Model.Username" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="@Model.Password" type="password" class="form-control" />
                            <label asp-for="@Model.Password">Password</label>
                            <span asp-validation-for="@Model.Password" class="text-danger"></span>
                        </div>
                        <div class="mt-4 mb-0">
                            <div class="d-grid">
                                <input class="btn btn-dark" type="submit" value="Daftar" name="Daftar" />
                            </div>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3">
                    <div class="small col-md-12"><a asp-area="" asp-controller="Login" asp-action="Index">Have an account? Go to login</a></div>
                </div>
            </div>
        </div>
    </div>
</div>

